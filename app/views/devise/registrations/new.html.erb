<div class="center">
  <h1>Sign up</h1>
  
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {class: "form-horizontal"}) do |f| %>
        <%= render 'devise/shared/error_messages' %>
        
        <div class="form-group">
          <%= f.label :name, class: "col-md-4 control-label" %>
          <div class="col-md-8">
            <%= f.text_field :name, class: "form-control" %>
          </div>
        </div>
      
        <div class="form-group">
          <%= f.label :email, class: "col-md-4 control-label" %>
          <div class="col-md-8">
            <%= f.email_field :email, autofocus: true, class: "form-control" %>
          </div>
        </div>
      
        <div class="form-group">
          <%= f.label :password, class: "col-md-4 control-label" %>
          <div class="col-md-8">
            <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
          </div>
        </div>
      
        <div class="form-group">
          <%= f.label :password_confirmation, class: "col-md-4 control-label" %>
          <div class="col-md-8">
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
          </div>
        </div>
      
        <div class="actions form-group">
          <div class="col-md-8 col-md-offset-4">
            <%= f.submit "Sign up", class: "btn btn-primary" %>
          </div>
        </div>
        
        <div class="form-group">
          <%= link_to user_facebook_omniauth_authorize_path, class: "btn btn-social btn-facebook" do %>
            <span class="fa fa-facebook"></span>Login with Facebook
          <% end %>
          <%= link_to user_twitter_omniauth_authorize_path, class: "btn btn-social btn-twitter" do %>
            <span class="fa fa-twitter"></span>Login with Twitter
          <% end %>
          <%= link_to user_google_oauth2_omniauth_authorize_path, class: "btn btn-social btn-google" do %>
            <span class="fa fa-google"></span>Login with Google+
          <% end %>
        </div>
      <% end %>
    </div> 
  </div>
</div>

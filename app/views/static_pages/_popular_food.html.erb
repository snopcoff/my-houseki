<h3 class="tt">Recommend Foods</h3>
<% @recommendfood.first(3).each do |food| %>
    <div class="col-md-4">
      <%= link_to fooddrink_path(food.id) do %>
        <%= image_tag(food.file, class: "img-thumbnail cover") %>
      <% end %>
      <h4 class="div-co-name"><%= food.name %>
      <br>[ <%= food.address %>]
      </h4>
    </div>
<% end %>